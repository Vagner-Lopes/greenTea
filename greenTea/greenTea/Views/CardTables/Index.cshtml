@model IEnumerable<greenTea.Models.CardTable>

@{
    ViewData["Title"] = "Index";

    List<Categoria> categotias = new List<Categoria>();
    List<string> nomes = new List<string>();

}


<p class="d-flex justify-content-end  ">
    <a asp-action="Index2" class="btn btn-primary">Editar</a>
</p>
<div class="container justify-content-center align-items-center  ">
    <h1 class="text-center pt-3">
        Tabela Pictogramas
    </h1>

    <div class="filters">

        <!--Menu de opções-->
        <ul class="btn-group simplefilter d-flex p-2">
            <li class="btn btn-primary m-1 filtr-controls badge-pill" data-filter="all">Todos</li>

            @foreach (var item in Model)
            {
                if (!nomes.Contains(item.Categoria.Nome))
                {
                    nomes.Add(item.Categoria.Nome);
                    <li class="btn btn-primary m-1 filtr-controls badge-pill" data-filter="@Html.DisplayFor(modelItem => item.Categoria.Nome)">
                        @Html.DisplayFor(modelItem => item.Categoria.Nome)
                    </li>
                }
            }
        </ul>
        <!--Menu de opções-->
    </div>

    <!--Cards-->
    <div class="cards d-flex row filter-container ml-4">

        @foreach (var item in Model)
        {
        <div class="card filtr-item col-3 col-sm-3 col-lg-4 card-edit" style="height: 220px;background: @Html.DisplayFor(modelItem => item.Categoria.Cor)"
             data-category="@Html.DisplayFor(modelItem => item.Categoria.Nome)" data-sort="value" data-author="H">
            <img src="@Html.DisplayFor(modelItem => item.Img)" alt="sample" />
            <div class="filtr-title card-edit-textos">
                <p>@Html.DisplayFor(modelItem => item.Nome)</p>
            </div>
        </div>
        }
    </div>
</div>







